[Unit]
Description=Node Exporter Service
Documentation=https://prometheus.io

[Service]
Type=simple

User=root
Group=root
PIDFile=/var/run/node_exporter.pid
WorkingDirectory=/etc/node_exporter-{{ node_exporter_version }}.linux-amd64

ExecStart=/usr/bin/node_exporter

Restart=on-failure
RestartSec=30
PrivateTmp=true

[Install]
WantedBy=multi-user.target
